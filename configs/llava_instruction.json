{
  "experiment_name": "qwen_clip_llava_instruction",
  "run_name": "",
  "output_dir": "./outputs/llava_instruction", 
  "logging_dir": "./logs/llava_instruction",
  "model": {
    "clip_model_name": "openai/clip-vit-base-patch32",
    "qwen_model_name": "Qwen/Qwen2.5-0.5B-Instruct",
    "fusion_type": "mlp",
    "fusion_config": {
      "hidden_dim": 1024,
      "num_layers": 2,
      "dropout": 0.1,
      "activation": "relu"
    },
    "freeze_vision": false,
    "use_lora": true,
    "load_in_4bit": false,
    "load_in_8bit": true,
    "lora_config": {
      "r": 16,
      "lora_alpha": 32,
      "lora_dropout": 0.1,
      "target_modules": ["q_proj", "v_proj", "k_proj", "o_proj", "gate_proj", "up_proj", "down_proj"]
    }
  },
  "data": {
    "train_data_path": "data/llava/llava_instruct_150k.json",
    "val_data_path": "data/processed/coco_val_instructions.json",
    "test_data_path": "",
    "image_dir": "data/coco/images/",
    "dataset_type": "instruction",
    "max_length": 1024,
    "image_size": [224, 224],
    "batch_size": 4,
    "num_workers": 4,
    "pin_memory": true,
    "use_data_augmentation": false,
    "augmentation_config": {}
  },
  "training": {
    "stage1_epochs": 1,
    "stage2_epochs": 2,
    "learning_rate": 2e-05,
    "weight_decay": 0.01,
    "adam_beta1": 0.9,
    "adam_beta2": 0.999,
    "adam_epsilon": 1e-08,
    "lr_scheduler_type": "cosine",
    "warmup_ratio": 0.03,
    "warmup_steps": 0,
    "gradient_accumulation_steps": 8,
    "max_grad_norm": 1.0,
    "fp16": false,
    "bf16": true,
    "eval_steps": 500,
    "save_steps": 1000,
    "save_total_limit": 3,
    "load_best_model_at_end": true,
    "metric_for_best_model": "eval_loss",
    "greater_is_better": false,
    "logging_steps": 50,
    "report_to": [],
    "early_stopping_patience": 3,
    "early_stopping_threshold": 0.001
  },
  "generation": {
    "max_new_tokens": 512,
    "temperature": 0.7,
    "top_p": 0.8,
    "top_k": 50,
    "do_sample": true,
    "repetition_penalty": 1.1,
    "length_penalty": 1.0,
    "pad_token_id": null,
    "eos_token_id": null,
    "bos_token_id": null
  },
  "device": "auto",
  "local_rank": -1,
  "ddp_find_unused_parameters": false,
  "dataloader_pin_memory": true,
  "seed": 42,
  "debug": false,
  "max_train_samples": null,
  "max_eval_samples": null
}